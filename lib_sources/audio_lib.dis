    print("Starting microphone recording")
    return true
}

func microphone_stop_recording(int mic_handle) {
    print("Stopping microphone recording")
    return true
}

func microphone_get_data(int mic_handle) {
    print("Getting microphone data")
    return "audio_data"
}

