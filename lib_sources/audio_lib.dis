    return true
}

func music_pause(int music_handle) {
    print("Pausing music")
    return true
}

func music_resume(int music_handle) {
    print("Resuming music")
    return true
}

func music_set_volume(float volume) {
    print("Setting music volume to " + volume)
    return true
}

func music_fade_in(int music_handle, float duration) {
    print("Fading in music over " + duration + " seconds")
    return true
}

func music_fade_out(float duration) {
    print("Fading out music over " + duration + " seconds")
    return true
}

