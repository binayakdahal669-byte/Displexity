func create_camera_2d(float x, float y, float zoom) {
    translate(-x, -y, 0.0)
    scale(zoom, zoom, 1.0)
}

func create_camera_3d(float x, float y, float z, float pitch, float yaw) {
    rotate(pitch, 1.0, 0.0, 0.0)
    rotate(yaw, 0.0, 1.0, 0.0)
    translate(-x, -y, -z)
}